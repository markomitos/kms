<configuration>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="mini-kms"/>

    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <level>level</level>
                <thread>thread</thread>
                <message>message</message>
                <logger>logger</logger>
                <context>context</context>
                <stackTrace>stack_trace</stackTrace>
            </fieldNames>
            <customFields>{"application_name":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames>
            </fieldNames>
            <customFields>{"application_name":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <logger name="KmsAuditLogger" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE_JSON"/>
        <appender-ref ref="FILE_JSON"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
    </root>
</configuration>